# BestPrice Backend — локальная разработка
# Скопируйте в .env и при необходимости измените значения

MONGO_URL=mongodb://localhost:27017
DB_NAME=bestprice_local

# JWT (для продакшена — используйте длинный случайный ключ)
JWT_SECRET_KEY=dev-secret-change-in-production

# CORS — для локального фронтенда
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Dev-флаг: понижает критичные ошибки валидатора до предупреждений
BESTPRICE_SKIP_RULES_VALIDATION=1
